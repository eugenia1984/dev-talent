---
import "@fontsource/fira-sans";
import "@fontsource-variable/space-grotesk";
import Navbar from "../components/layout/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dev-Talent, find your developer" />
		<meta name="viewport" content="width=device-width" />
		<link type="image/png" sizes="16x16" rel="icon" href="/icons8-rocket-48.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-blue-800 mx-6 text-white">
		<Navbar />
		<slot />
	</body>
</html>

